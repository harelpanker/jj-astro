---
interface Props {
  title?: string;
  description?: string;
}
import Footer from '@components/shared/Footer.astro';
import '@fontsource/alef';
import '@phosphor-icons/web/regular';

const {
  title = 'אוסטריה עם יעקב',
  description = 'טיולי יום מאורגנים באוסטריה, פראג ובראטיסלבה | איסוף משדה התעופה',
} = Astro.props;
---

<!doctype html>
<html lang='he' dir='rtl' class='scroll-smooth'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class='style_wrap font-alef bg-white'>
      <div class='flex-1 flex flex-col'>
        <!-- Header -->
        <main class='relative z-10 flex-1'><slot /></main>
      </div>
      <Footer />
    </div>
  </body>
</html>

<style>
  .style_wrap {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    min-height: 100dvh;
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 10;
  }
</style>

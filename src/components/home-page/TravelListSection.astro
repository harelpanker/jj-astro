---
import { data } from "./travel/data";
import PaddingX from "@components/ui/PaddingX.astro";
import Container from "@components/ui/Container.astro";
import Item from "./travel/Item.astro";
---

<section class="relative z-20 bg-light-green text-dark-green">
  <PaddingX
    >
    <Container>
      <div class="flex min-h-dvh flex-col gap-y-9 py-16">
        <aside class="flex flex-wrap gap-2">
          {
            data.map((item) => (
              <a
                href={item.href}
                class={`rounded bg-dark-green/20 px-3 py-1 text-xs font-bold transition duration-300 hover:bg-dark-green/0 lg:text-sm`}
              >
                {item.title}
              </a>
            ))
          }
        </aside>
        <div class="flex flex-col gap-y-12 lg:gap-y-36">
          {
            data.map((item) => (
              <Item
                title={item.title}
                text={item.text}
                src={item.src}
                isOdd={item.isOdd}
                id={item.id}
                price={item.price}
                length={item.length}
              />
            ))
          }
        </div>
      </div>
    </Container></PaddingX
  >
</section>

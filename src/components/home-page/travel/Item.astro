---
import { Image } from 'astro:assets';
import placeholder from '@assets/placeholder.jpg';

const {
  title,
  text = placeholder,
  src,
  isOdd,
  price,
  length,
  id,
} = Astro.props;
---

<div
  class={`row relative flex flex-col items-center gap-y-6 lg:flex-row lg:gap-x-20 ${
    isOdd ? '' : 'lg:justify-end'
  }`}>
  <figure
    class={`order-first w-full overflow-hidden rounded-lg lg:h-[70dvh] lg:max-w-[50%] lg:shrink-0 lg:rounded-2xl ${
      isOdd ? '' : 'lg:order-last'
    }`}>
    <Image class='h-full w-full object-cover' src={src} alt={title} />
  </figure>
  <div class='mx-auto flex w-full max-w-md flex-col gap-y-3'>
    <h2 class='text-3xl font-bold lg:text-6xl'>{title}</h2>
    <p>{text}</p>
    <div class='lg:flex'>
      <div
        class='mt-4 flex w-full justify-around gap-x-6 bg-dark-green p-2 font-bold text-light-green lg:w-auto lg:px-6'>
        <div>
          <h3 class='text-lg'>אורך טיול:</h3>
          <p class='text-xl'>{length}</p>
        </div>
        <div>
          <h3 class='text-lg'>סכום לאדם:</h3>
          <p class='text-xl'>{price}€</p>
        </div>
      </div>
    </div>
  </div>
  <!-- id -->
  <div class='absolute -top-20 left-0 w-full' id={id}></div>
</div>

---
interface Props {
  href?: string;
  text?: string;
  variant?: 'primary' | 'secondary';
  isLg?: boolean;
}
const {
  href = '/',
  text = 'שמור את מקומך',
  variant = 'primary',
  isLg = false,
} = Astro.props;
---

<a
  href={href}
  class={`flex items-center justify-center rounded-full transition duration-300 ${isLg ? 'px-8 py-4 text-xl' : 'px-5 py-2 text-lg'} ${
    variant === 'primary'
      ? 'bg-light-green text-dark-green hover:bg-light-green/70'
      : 'bg-dark-green text-light-green hover:bg-dark-green/70'
  }`}>{text}</a
>
